{
  "dependencies": {
    "body-parser": "^1.20.0",
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "ffmpeg-for-static": "^1.0.0",
    "ffmpeg-static": "^5.0.2",
    "file-type": "^17.1.2",
    "jimp": "^0.16.0",
    "libreoffice-convert": "^1.4.1",
    "multer": "^1.4.5-lts.1",
    "path": "^0.12.7"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "node":"node app",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -wml",
    "linux":"rm -rf node_modules && electron-builder -l",
    "windows":"rm -rf node_modules && electron-builder -w",
    "mac":"rm -rf node_modules && electron-builder"
  },
  "devDependencies": {
    "electron": "19.0.8",
    "electron-builder": "^23.1.0"
  },
  "description": "A set of conversion tools",
  "author": "Andrew",
  "name": "fileconvert",
  "version": "0.9.0",
  "license": "MIT",

  "build": {
    "productName":"File Convert",
    "appId": "com.andrew.fileconvert",
    "mac":{
      "category":"Utility"
    }
    ,
    "asar":false,
    "directories":{
  "buildResources":"resources"
    },
    "linux": {
      "target": [
      "AppImage"
      ]
    },
    "win": {
      "target": "nsis"    },
    "nsis":{
      "allowToChangeInstallationDirectory":true,
      "oneClick":false
    }
  }
}
